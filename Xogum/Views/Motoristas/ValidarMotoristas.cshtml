@model Xogum.ViewModels.Motorista.MotoristaExibicaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center">Verificação de Cadastro de Motoristas</h2>
    <br/>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Locais de Verificação de Autenticidade de Documentação</h4>
            <ul>
                <li>Para verificar a validade de uma CNH clique <a href="https://www.detran.sp.gov.br/wps/portal/portaldetran/cidadao/habilitacao/servicos/autenticacaoCNH/!ut/p/z1/pZHLDoIwEEU_qXdoo-2yIsijxIgi2I1hZZooujB-v8DORCvG2U1zznRyh1nWMNu1D3dq7-7atee-P9jZUZCKiEIU0lQEHZeGRCIDgFg9AlxgqxakAZ5IaFnuEm1AEILZf3zMf_RltI8Hn8cUrQPkmOZnG4RJ_2JWtAyhlRBFmuUcik_z8aH0xP89gPWPr5kdEd8FvMAQ8SvwJsMR8IX0bc3bpRqqgUvdExx8jAQ!/dz/d5/L2dBISEvZ0FBIS9nQSEh/p0/IZ7_419E11C0M8LU10AFRL14H820O2=CZ6_419E11C0M8LU10AFRL14H82001=LA0=Ejavax.servlet.include.path_info!QCPpagesQCPautenticacaoCNHQCPmenuView.xhtml==/#Z7_419E11C0M8LU10AFRL14H820O2">AQUI</a></li>
                <li>Para consultar alguma pendencia ou irregularidade do veículo clique <a href="https://www.ipva.fazenda.sp.gov.br/IPVANET_Consulta/Consulta.aspx">AQUI</a></li>
            </ul>
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.usuario.Nome, htmlAttributes: new { @class = "control-label col-md-2 " })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.usuario.Nome, new { htmlAttributes = new { @class = "form-control",
                           disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.usuario.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.usuario.Cpf, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.usuario.Cpf, new { htmlAttributes = new { @class = "form-control", disabled="disabled" } })
                            @Html.ValidationMessageFor(model => model.usuario.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Cnh, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Cnh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Cnh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CertidaoCriminal, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CertidaoCriminal, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CertidaoCriminal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            

            <div class="row">
                <div class="col-md-6">
                    @foreach (var item in Model.Veiculos)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => item.Placa, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => item.Placa, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => item.Placa, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    @foreach (var item in Model.Veiculos)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => item.Crlv, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => item.Crlv, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => item.Crlv, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                </div>
            </div>

            
            <div class="row">
                <div class="col-md-6">
                    @foreach (var item in Model.Veiculos)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => item.Modelo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => item.Modelo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => item.Modelo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    @foreach (var item in Model.Veiculos)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => item.Cor, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => item.Cor, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => item.Cor, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    @foreach (var item in Model.Veiculos)
                    {

                        <div class="form-group">
                            @Html.LabelFor(model => item.Foto, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => item.Foto, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => item.Foto, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.FotoComCnh, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FotoComCnh, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.FotoComCnh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row text-center espaco">
                <div class="form-group">
                    <div class="col-md-6">
                        <input type="submit" value="CONFIRMAR MOTORISTA" class="btn btn-success" />
                    </div>
                    <div class="col-md-6">
                        <input type="submit" value="RECUSAR MOTORISTA" class="btn btn-danger" />
                    </div>
                </div>
            </div>
            

            @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>*@
        </div>
    }

</div>